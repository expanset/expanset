<assembly 
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>site-folder</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/webapp</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>assets/css/**</exclude>
				<exclude>assets/js/**</exclude>		
				<exclude>assets/fonts/.gitignore</exclude>			
				<exclude>WEB-INF/db/**</exclude>
				<exclude>WEB-INF/logback.xml</exclude>
				<exclude>WEB-INF/views/layout/scripts.ftl</exclude>
				<exclude>WEB-INF/views/layout/scripts.min.ftl</exclude>
				<exclude>WEB-INF/views/layout/styles.ftl</exclude>
				<exclude>WEB-INF/views/layout/styles.min.ftl</exclude>		
				<exclude>node/**</exclude>				
				<exclude>node_modules/**</exclude>
				<exclude>bower_components/**</exclude>
				<exclude>bower.json</exclude>
				<exclude>Gruntfile.js</exclude>
				<exclude>package.json</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/webapp/assets/css</directory>
			<outputDirectory>/assets/css</outputDirectory>
			<includes>
				<include>*.min.css</include>
				<include>*.min.css.map</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/webapp/assets/js</directory>
			<outputDirectory>/assets/js</outputDirectory>
			<includes>
				<include>*.min.js</include>
				<include>*.min.js.map</include>
			</includes>
		</fileSet>	
		<fileSet>
			<directory>${basedir}/src/main/assembly/${releaseProfile}</directory>
			<outputDirectory>/WEB-INF</outputDirectory>
		</fileSet>		
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/WEB-INF</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-javadoc.jar</exclude>
				<exclude>*-sources.jar</exclude>
			</excludes>
		</fileSet>			
	</fileSets>
	<files>
		<file>
			<source>${basedir}/src/main/webapp/WEB-INF/views/layout/styles.min.ftl</source>
			<destName>styles.ftl</destName>
			<outputDirectory>/WEB-INF/views/layout</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/webapp/WEB-INF/views/layout/scripts.min.ftl</source>
			<destName>scripts.ftl</destName>
			<outputDirectory>/WEB-INF/views/layout</outputDirectory>
		</file>
	</files>		
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<scope>runtime</scope>
			<outputDirectory>/WEB-INF/lib</outputDirectory>
			<unpack>false</unpack>
		</dependencySet>
	</dependencySets>
</assembly>